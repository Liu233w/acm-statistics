{
  "extends": [
    "config:base",
    "docker:enableMajor",
    "docker:pinDigests",
    "group:recommended",
    "group:monorepos"
  ],
  "packageRules": [
    {
      "groupName": "aspnetboilerplate",
      "packagePatterns": ["^Abp\\.|^Abp$"]
    },
    {
      "groupName": "entityframework",
      "packagePatterns": [
        "^Microsoft\\.EntityFrameworkCore"
      ]
    }
  ],
  "labels": ["dependencies"],
  "automerge": true,
  "dockerfile": {
    "fileMatch": ["(^|/|\\.)Dockerfile$"]
  }
}
